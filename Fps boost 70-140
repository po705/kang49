-- 1. FPS Boost Settings
game:GetService("Lighting").GlobalShadows = false
game:GetService("Lighting").Brightness = 2
game:GetService("Lighting").FogEnd = 100000
game:GetService("Lighting").Technology = Enum.Technology.Compatibility

for _, effect in pairs(game:GetService("Lighting"):GetChildren()) do
	if effect:IsA("PostEffect") then
		effect.Enabled = false
	end
end

-- à¸›à¸´à¸” Texture / Decals
for _, obj in pairs(workspace:GetDescendants()) do
	if obj:IsA("Decal") or obj:IsA("Texture") then
		obj:Destroy()
	end
end

-- 2. Clay Style (Material Override)
for _, part in pairs(workspace:GetDescendants()) do
	if part:IsA("BasePart") then
		part.Material = Enum.Material.SmoothPlastic
		part.Reflectance = 0
	end
end

-- 3. à¹€à¸žà¸´à¹ˆà¸¡ Clay Filter à¹ƒà¸«à¹‰à¸ à¸²à¸žà¸”à¸¹à¸™à¸¸à¹ˆà¸¡à¸‚à¸¶à¹‰à¸™ (optional)
local Lighting = game:GetService("Lighting")

local colorCorrection = Instance.new("ColorCorrectionEffect")
colorCorrection.Brightness = 0.1
colorCorrection.Contrast = 0.2
colorCorrection.Saturation = -0.3
colorCorrection.TintColor = Color3.fromRGB(255, 230, 210)
colorCorrection.Parent = Lighting

local blur = Instance.new("BlurEffect")
blur.Size = 2
blur.Parent = Lighting

print("âœ… Clay Style FPS Boost Activated! | by CHAIYOKC")
