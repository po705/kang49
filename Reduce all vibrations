-- üß± Clay Style FPS Boost + Anti Shake by CHAIYOKC

local Lighting = game:GetService("Lighting")
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

------------------------------------------------
-- üü¢ 1. FPS BOOST
------------------------------------------------
Lighting.GlobalShadows = false
Lighting.Brightness = 2
Lighting.FogEnd = 100000
Lighting.Technology = Enum.Technology.Compatibility

-- ‡∏õ‡∏¥‡∏î Post Effects ‡πÄ‡∏î‡∏¥‡∏°
for _, v in pairs(Lighting:GetChildren()) do
	if v:IsA("PostEffect") then
		v.Enabled = false
	end
end

-- ‡∏•‡∏ö Texture / Decal
for _, obj in pairs(workspace:GetDescendants()) do
	if obj:IsA("Decal") or obj:IsA("Texture") then
		obj:Destroy()
	end
end

-- ‡∏õ‡∏£‡∏±‡∏ö‡∏ß‡∏±‡∏™‡∏î‡∏∏‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î‡πÄ‡∏õ‡πá‡∏ô‡∏î‡∏¥‡∏ô‡∏ô‡πâ‡∏≥‡∏°‡∏±‡∏ô
for _, part in pairs(workspace:GetDescendants()) do
	if part:IsA("BasePart") then
		part.Material = Enum.Material.SmoothPlastic
		part.Reflectance = 0
	end
end

------------------------------------------------
-- üé® 2. Clay Style Filter (Soft Look)
------------------------------------------------
local colorCorrection = Instance.new("ColorCorrectionEffect")
colorCorrection.Brightness = 0.1
colorCorrection.Contrast = 0.2
colorCorrection.Saturation = -0.3
colorCorrection.TintColor = Color3.fromRGB(255, 230, 210)
colorCorrection.Parent = Lighting

local blur = Instance.new("BlurEffect")
blur.Size = 2
blur.Parent = Lighting

------------------------------------------------
-- üö´ 3. Anti-Shake System
------------------------------------------------
-- 3.1 ‡∏Å‡∏•‡πâ‡∏≠‡∏á‡πÑ‡∏°‡πà‡∏™‡∏±‡πà‡∏ô
local cam = workspace.CurrentCamera
RunService.RenderStepped:Connect(function()
	if cam then
		cam.CFrame = CFrame.new(cam.CFrame.Position, cam.CFrame.Position + cam.CFrame.LookVector)
	end
end)

-- 3.2 ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡∏™‡∏±‡πà‡∏ô‡∏ï‡∏≠‡∏ô‡∏ï‡∏±‡∏ß‡∏•‡∏∞‡∏Ñ‡∏£‡πÄ‡∏î‡∏¥‡∏ô ‡∏ß‡∏¥‡πà‡∏á ‡∏Å‡∏£‡∏∞‡πÇ‡∏î‡∏î
player.CharacterAdded:Connect(function(char)
	local humanoid = char:WaitForChild("Humanoid", 10)
	if humanoid then
		humanoid.CameraOffset = Vector3.new(0, 0, 0)
		humanoid:SetStateEnabled(Enum.HumanoidStateType.FallingDown, false)
		humanoid:SetStateEnabled(Enum.HumanoidStateType.Ragdoll, false)
	end
end)

-- 3.3 ‡∏õ‡∏¥‡∏î recoil ‡∏´‡∏£‡∏∑‡∏≠‡∏Å‡∏≤‡∏£‡∏™‡∏±‡πà‡∏ô‡∏à‡∏≤‡∏Å‡∏™‡∏Ñ‡∏£‡∏¥‡∏õ‡∏ï‡πå‡∏≠‡∏∑‡πà‡∏ô
RunService.RenderStepped:Connect(function()
	for _, obj in pairs(workspace:GetDescendants()) do
		if obj:IsA("Camera") or obj.Name:lower():find("shake") or obj.Name:lower():find("recoil") then
			if obj:IsA("Script") or obj:IsA("LocalScript") then
				obj.Disabled = true
			end
		end
	end
end)

print("‚úÖ Clay FPS Boost + Anti-Shake Enabled | by CHAIYOKC")
